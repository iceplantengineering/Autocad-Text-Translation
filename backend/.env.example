# Translation API Keys (Choose one)
DEEPL_API_KEY=your_deepl_api_key_here
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here

# Autodesk Platform Services (Optional)
APS_CLIENT_ID=your_aps_client_id
